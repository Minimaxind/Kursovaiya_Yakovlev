<Window x:Class="Kursovaiya_Yakovlev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню" Height="627" Width="1263"
        Background="#E0E0E0" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="117"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Background="#887BFF" Grid.Row="0" CornerRadius="0,0,100,0" Margin="-20,-21,-20,0"
                Height="185" VerticalAlignment="Top" Grid.RowSpan="2">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="40,0,0,0">
                    <TextBlock Text="Главное меню" FontSize="36" FontWeight="Bold" Foreground="White" Height="53" Width="345"/>

                </StackPanel>
                <TextBlock x:Name="WelcomeText" Text="Здравствуйте, Имя Фамилия" FontSize="26" 
           FontWeight="SemiBold" Foreground="White" Margin="737,66,62,50"/>

                <!-- Кнопка закрытия -->
                <Button x:Name="CloseButton" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Margin="0,15,15,0" Width="30" Height="30" Background="Transparent" 
                        BorderThickness="0" Click="CloseButton_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse x:Name="circle" Width="30" Height="30" Fill="#FF4444"/>
                                <Grid Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Path Data="M0,10 L20,10" Stroke="White" StrokeThickness="2"
                                          StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="45" CenterX="10" CenterY="10"/>
                                        </Path.RenderTransform>
                                    </Path>
                                    <Path Data="M0,10 L20,10" Stroke="White" StrokeThickness="2"
                                          StrokeStartLineCap="Round" StrokeEndLineCap="Round">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="-45" CenterX="10" CenterY="10"/>
                                        </Path.RenderTransform>
                                    </Path>
                                </Grid>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="circle" Property="Fill" Value="#FF5555"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="circle" Property="Fill" Value="#FF3333"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Основное содержимое - меню -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,103,0,0" Width="400" Height="314">
            <!-- Кнопка "Доступные объекты" -->
            <Button x:Name="ObjectsButton" Content="Доступные объекты" FontSize="28" Margin="0,0,0,20"
                    Height="60" Click="ObjectsButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="#0DA960" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0EBA6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0C9A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>

            <!-- Кнопка "Услуги" -->
            <Button x:Name="ServicesButton" Content="Услуги" FontSize="28" Margin="0,0,0,20"
                    Height="60" Click="ServicesButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="#0DA960" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0EBA6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0C9A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>

            <!-- Кнопка "Контракты" -->
            <Button x:Name="ContractsButton" Content="Контракты" FontSize="28" Margin="0,0,0,20"
                    Height="60" Click="ContractsButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="#0DA960" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0EBA6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0C9A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>

            <!-- Кнопка "Пользователи" -->
            <Button x:Name="UsersButton" Content="Пользователи" FontSize="28" Margin="0,0,0,20"
                    Height="60" Click="UsersButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" Background="#0DA960" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0EBA6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#0C9A50"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>
                    <SolidColorBrush Color="White"/>
                </Button.Foreground>
            </Button>
        </StackPanel>
    </Grid>
</Window>